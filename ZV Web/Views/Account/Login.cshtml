@model ZV_Web.Models.LoginModel

@{
    ViewBag.Title = "Login page";
}

<div id="login-box" class="centered-box login-box">
    <div class="login-header">
        <h1>Авторизация</h1>
    </div>
    <div class="login-form clearfix">
        @using (Html.BeginForm("Login", "Account",FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <div class="row">@Html.ValidationSummary()</div>
            <div class="row">
                <div class="span2">@Html.LabelFor(x => x.UserName)</div>
                <div class="span2">@Html.EditorFor(x => x.UserName)</div>
            </div>
            <div class=""><input type="submit" class="login-button submit" value="Войти"/></div>
        }
    </div>
    <div class="login-footer clearfix"></div>
</div>
